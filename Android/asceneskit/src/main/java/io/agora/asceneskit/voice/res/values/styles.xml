<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AVoiceRoomView">
        <!-- 背景 -->
        <item name="voice_room_background">@null</item>
        <item name="voice_room_textColor">@color/voice_room_textColor_171A1C</item>
        <item name="voice_room_notice_style">@style/voice_top_text_style</item>
        <item name="voice_room_more_dialog_background">@drawable/voice_bg_radius20_light</item>
    </style>

    <style name="AVoiceRoomInfoView" parent="AUIRoomInfo.Appearance">
        <item name="aui_upperLeft_Layout_background">#33FFFFFF</item>
    </style>
    <style name="AVoiceRoomMemberInfoView" parent="AUIMemberInfo.Appearance">
        <item name="aui_upperRight_count_background">@drawable/aui_member_count_dark_bg</item>
    </style>
    <style name="AVoiceRoomChatBottomView" parent="AUIChatBottomView.Appearance"></style>
    <style name="AVoiceRoomEmojiView" parent="AUIEmojiView.Appearance"></style>
    <style name="AVoiceRoomChatListView" parent="AUIChatListView.Appearance"></style>
    <style name="AVoiceRoomGiftBarrageView" parent="AUIGiftBarrageView.Appearance"></style>
    <style name="AVoiceRoomGiftBottomDialog" parent="AUIGiftBottomDialog.Appearance"></style>
    <style name="AVoiceRoomAction" parent="AUIAction.Appearance"></style>


    <style name="voice_top_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/voice_bg_rect_radius13_black20</item>
    </style>


</resources>